<script type="text/javascript">
    //<![CDATA[

    $(function(){
        redrawDotNav();
        $(window).bind('scroll',function(e){
            parallaxScroll();
            redrawDotNav();
        });

        $('a.anchor1').click(function(){
            $('html, body').animate({
                scrollTop:$('#info').offset().top
            }, 1000, function() {
                parallaxScroll();
            });
            return false;
        });
        $('a.anchor2').click(function(){
            $('html, body').animate({
                scrollTop:$('#pic1').offset().top
            }, 1000, function() {
                parallaxScroll();
            });
            return false;
        });
        $('a.anchor3').click(function(){
            $('html, body').animate({
                scrollTop:$('#pic2').offset().top
            }, 1000, function() {
                parallaxScroll();
            });
            return false;
        });
        $('a.anchor4').click(function(){
            $('html, body').animate({
                scrollTop:$('#pic3').offset().top
            }, 1000, function() {
                parallaxScroll();
            });
            return false;
        });
        $('a.anchor5').click(function(){
            $('html, body').animate({
                scrollTop:$('#pic4').offset().top
            }, 1000, function() {
                parallaxScroll();
            });
            return false;
        });
        $('a.anchor6').click(function(){
            $('html, body').animate({
                scrollTop:$('#pic5').offset().top
            }, 1000, function() {
                parallaxScroll();
            });
            return false;
        });
        $('#primary a').hover(
                function () {
                    $(this).prev('h1').show();
                },
                function () {
                    $(this).prev('h1').hide();
                }
        );

    });

    function parallaxScroll(){
        var scrolled = $(window).scrollTop();
        $('#parallax').css('top',(0-(scrolled*1.5))+'px');
    }

    function redrawDotNav(){
        var sectionTop =  0;
        var section1Top =  $('#info').offset().top - (($('#pic1').offset().top - $('#info').offset().top) / 2);
        var section2Top =  $('#pic1').offset().top - (($('#pic2').offset().top - $('#pic1').offset().top) / 2);
        var section3Top =  $('#pic2').offset().top - (( $('#pic3').offset().top - $('#pic2').offset().top) / 2);
        var section4Top =  $('#pic3').offset().top - (($('#pic4').offset().top - $('#pic3').offset().top) / 2);
        var section5Top =  $('#pic4').offset().top - (($('#pic5').offset().top - $('#pic4').offset().top) / 2);
        var section6Top =  $('#pic5').offset().top - (($('#pic6').offset().top - $('#pic5').offset().top) / 2);
        var section7Top =  $('#pic6').offset().top - (($(document).height() - $('#pic6').offset().top) / 2);
        $('#primary a').removeClass('active');
        if($(document).scrollTop() >= section1Top && $(document).scrollTop() < section2Top){
            $('.anchor1').addClass('active');
        }else if($(document).scrollTop() >= section2Top && $(document).scrollTop() < section3Top){
            $('.anchor2').addClass('active');
        } else if ($(document).scrollTop() >= section3Top && $(document).scrollTop() < section4Top){
            $('.anchor3').addClass('active');
        } else if ($(document).scrollTop() >= section4Top && $(document).scrollTop() < section5Top){
            $('.anchor4').addClass('active');
        } else if ($(document).scrollTop() >= section5Top && $(document).scrollTop() < section6Top){
            $('.anchor5').addClass('active');
        }else if ($(document).scrollTop() >= section6Top && $(document).scrollTop() < section7Top){
            $('.anchor6').addClass('active');
        }else{
            $('.anchor7').addClass('active');
        }
    }


    //]]>
</script>
